<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/thinking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:visibility="gone"
    tools:showIn="@layout/game_main">

    <ProgressBar
        android:id="@+id/progressBar"
        android:background="@drawable/pika"
        android:layout_marginTop="@dimen/progressMargin"
        android:layout_marginLeft="@dimen/progressMargin"
        android:layout_width="@dimen/progressLayout"
        android:layout_height="@dimen/progressLayout"
        android:indeterminate="true"/>
</FrameLayout>